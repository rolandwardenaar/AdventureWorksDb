@page "/people/{id:int}/edit"
@inject IPersonService PersonService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Edit @(person?.FullName ?? "Person") - AdventureWorks</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-1 mobile-first-container">
    <MudGrid Spacing="1">
        <!-- Header Section -->
        <MudItem xs="12">
            <MudPaper Class="pa-2 pa-sm-3" Elevation="1">
                <MudStack Spacing="1">
                    <MudBreadcrumbs Items="_breadcrumbItems" Class="responsive-breadcrumbs" />
                    <MudStack Row="false" Class="header-content">
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="responsive-title">
                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-1" Size="Size.Small" />
                            Edit Person
                        </MudText>
                        @if (person != null)
                        {
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                @person.FullName (ID: @person.BusinessEntityId)
                            </MudText>
                        }                        <MudStack Row Spacing="1" Justify="Justify.Center" Class="action-buttons">
                            <MudButton Variant="Variant.Outlined" 
                                       Color="Color.Secondary" 
                                       Size="Size.Small"
                                       StartIcon="@Icons.Material.Filled.ArrowBack"
                                       Href="@($"/people/{Id}")"
                                       Class="responsive-btn">
                                <MudText Class="d-none d-sm-inline">Back to Details</MudText>
                                <MudText Class="d-inline d-sm-none">‚Üê</MudText>
                            </MudButton>
                            <MudButton Variant="Variant.Text" 
                                       Color="Color.Secondary" 
                                       Size="Size.Small"
                                       StartIcon="@Icons.Material.Filled.List"
                                       Href="/people"
                                       Class="responsive-btn">
                                <MudText Class="d-none d-sm-inline">Back to List</MudText>
                                <MudText Class="d-inline d-sm-none">üìã</MudText>
                            </MudButton>
                        </MudStack>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>@if (isLoading)
        {
            <MudItem xs="12">
                <MudPaper Class="pa-3" Elevation="1">
                    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-1" />
                    <MudText Align="Align.Center" Typo="Typo.body2">Loading...</MudText>
                </MudPaper>
            </MudItem>
        }
        else if (person == null)
        {
            <MudItem xs="12">
                <MudAlert Severity="Severity.Error" Class="my-1">
                    <MudText>Person not found.</MudText>
                    <MudButton Variant="Variant.Text" 
                               Color="Color.Primary"
                               Size="Size.Small"
                               Href="/people"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               Class="mt-1">
                        Return to List
                    </MudButton>
                </MudAlert>
            </MudItem>
        }
        else
        {
            <!-- Form Section -->
            <MudItem xs="12">
                <MudPaper Class="pa-3" Elevation="1">                    <EditForm Model="@personUpdateDto" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        
                        <MudGrid Spacing="1">
                            <!-- Personal Information Section -->
                            <MudItem xs="12">
                                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-1">
                                    <MudIcon Icon="@Icons.Material.Filled.Person" Class="mr-1" Size="Size.Small" />
                                    Personal Information
                                </MudText>
                                <MudDivider Class="mb-2" />
                            </MudItem>

                            <!-- Person Type -->
                            <MudItem xs="12" sm="6">
                                <MudSelect @bind-Value="personUpdateDto.PersonType" 
                                           Label="Person Type" 
                                           Variant="Variant.Outlined"
                                           Required="true"
                                           Class="compact-field"
                                           Dense="true">
                                    <MudSelectItem Value="@("IN")">Individual Customer</MudSelectItem>
                                    <MudSelectItem Value="@("EM")">Employee</MudSelectItem>
                                    <MudSelectItem Value="@("SP")">Sales Person</MudSelectItem>
                                    <MudSelectItem Value="@("SC")">Store Contact</MudSelectItem>
                                    <MudSelectItem Value="@("VC")">Vendor Contact</MudSelectItem>
                                </MudSelect>
                                <ValidationMessage For="@(() => personUpdateDto.PersonType)" />
                            </MudItem>

                            <!-- Title -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.Title" 
                                              Label="Title" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              MaxLength="8" />
                                <ValidationMessage For="@(() => personUpdateDto.Title)" />
                            </MudItem>

                            <!-- First Name -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.FirstName" 
                                              Label="First Name" 
                                              Variant="Variant.Outlined"
                                              Required="true"
                                              Class="compact-field"
                                              Dense="true"
                                              MaxLength="50" />
                                <ValidationMessage For="@(() => personUpdateDto.FirstName)" />
                            </MudItem>

                            <!-- Middle Name -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.MiddleName" 
                                              Label="Middle Name" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              MaxLength="50" />
                                <ValidationMessage For="@(() => personUpdateDto.MiddleName)" />
                            </MudItem>

                            <!-- Last Name -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.LastName" 
                                              Label="Last Name" 
                                              Variant="Variant.Outlined"
                                              Required="true"
                                              Class="compact-field"
                                              Dense="true"
                                              MaxLength="50" />
                                <ValidationMessage For="@(() => personUpdateDto.LastName)" />
                            </MudItem>

                            <!-- Suffix -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.Suffix" 
                                              Label="Suffix" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              MaxLength="10" />
                                <ValidationMessage For="@(() => personUpdateDto.Suffix)" />
                            </MudItem>

                            <!-- Email Promotion -->
                            <MudItem xs="12" sm="6">
                                <MudSelect @bind-Value="personUpdateDto.EmailPromotion" 
                                           Label="Email Promotion" 
                                           Variant="Variant.Outlined"
                                           Class="compact-field"
                                           Dense="true">
                                    <MudSelectItem Value="0">No email promotions</MudSelectItem>
                                    <MudSelectItem Value="1">AdventureWorks only</MudSelectItem>
                                    <MudSelectItem Value="2">AdventureWorks and partners</MudSelectItem>
                                </MudSelect>
                                <ValidationMessage For="@(() => personUpdateDto.EmailPromotion)" />
                            </MudItem>

                            <!-- Demographics -->
                            <MudItem xs="12" sm="6">
                                <MudTextField @bind-Value="personUpdateDto.Demographics" 
                                              Label="Demographics (XML)" 
                                              Variant="Variant.Outlined"
                                              Lines="2"
                                              Class="compact-field" />
                                <ValidationMessage For="@(() => personUpdateDto.Demographics)" />
                            </MudItem>

                            <!-- System Information Section -->
                            <MudItem xs="12" Class="mt-3">
                                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="mb-1">
                                    <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-1" Size="Size.Small" />
                                    System Information
                                </MudText>
                                <MudDivider Class="mb-2" />
                            </MudItem>

                            <MudItem xs="12" sm="4">
                                <MudTextField Value="@person.BusinessEntityId.ToString()" 
                                              Label="Business Entity ID" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              ReadOnly="true" />
                            </MudItem>

                            <MudItem xs="12" sm="4">
                                <MudTextField Value="@person.Rowguid.ToString()" 
                                              Label="Row GUID" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              ReadOnly="true" />
                            </MudItem>

                            <MudItem xs="12" sm="4">
                                <MudTextField Value="@person.ModifiedDate.ToString("yyyy-MM-dd HH:mm")" 
                                              Label="Last Modified" 
                                              Variant="Variant.Outlined"
                                              Class="compact-field"
                                              Dense="true"
                                              ReadOnly="true" />
                            </MudItem>

                            <!-- Form Actions -->
                            <MudItem xs="12">
                                <MudDivider Class="my-2" />
                                <MudStack Row Spacing="1" Justify="Justify.FlexEnd">
                                    <MudButton Variant="Variant.Outlined" 
                                               Color="Color.Info" 
                                               StartIcon="@Icons.Material.Filled.Refresh"
                                               OnClick="ResetForm"
                                               Size="Size.Small"
                                               Disabled="@isSubmitting">
                                        Reset
                                    </MudButton>
                                    <MudButton Variant="Variant.Outlined" 
                                               Color="Color.Secondary" 
                                               StartIcon="@Icons.Material.Filled.Cancel"
                                               OnClick="Cancel"
                                               Size="Size.Small"
                                               Disabled="@isSubmitting">
                                        Cancel
                                    </MudButton>
                                    <MudButton ButtonType="ButtonType.Submit" 
                                               Variant="Variant.Filled" 
                                               Color="Color.Primary" 
                                               StartIcon="@Icons.Material.Filled.Save"
                                               Size="Size.Small"
                                               Disabled="@isSubmitting">
                                        @if (isSubmitting)
                                        {
                                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                            <MudText Class="ms-2">Updating...</MudText>
                                        }
                                        else
                                        {
                                            <MudText>Update</MudText>
                                        }
                                    </MudButton>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </EditForm>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

<style>
    /* Mobile-First Design */
    .mobile-first-container {
        max-width: 100%;
        margin: 0;
        padding: 0 4px;
    }
    
    /* Responsive Breadcrumbs */
    .responsive-breadcrumbs .mud-breadcrumb-item {
        font-size: 0.6rem;
    }
    
    /* Header Content - Stack on Mobile */
    .header-content {
        gap: 0.5rem;
    }
    
    /* Responsive Title */
    .responsive-title {
        font-size: 1rem;
        line-height: 1.2;
        word-break: break-word;
    }
    
    /* Action Buttons - Mobile First */
    .action-buttons {
        margin-top: 0.5rem;
        flex-wrap: wrap;
    }
    
    .responsive-btn {
        min-width: 44px; /* Touch-friendly minimum */
        padding: 4px 8px;
    }
    
    /* Compact Fields - Mobile Optimized */
    .compact-field .mud-input-control {
        margin-bottom: 2px;
    }
    
    .compact-field .mud-input-control .mud-input {
        padding: 4px 8px;
        font-size: 0.8rem;
        min-height: 36px;
    }
    
    .compact-field .mud-input-label {
        font-size: 0.7rem;
    }
    
    .compact-field .mud-select-input {
        padding: 4px 8px;
        font-size: 0.8rem;
        min-height: 36px;
    }
    
    /* Small Screens (‚â•480px) */
    @@media (min-width: 480px) {
        .mobile-first-container {
            padding: 0 8px;
        }
        
        .responsive-breadcrumbs .mud-breadcrumb-item {
            font-size: 0.7rem;
        }
        
        .responsive-title {
            font-size: 1.1rem;
        }
        
        .compact-field .mud-input-control .mud-input {
            padding: 6px 10px;
            font-size: 0.85rem;
            min-height: 38px;
        }
        
        .compact-field .mud-input-label {
            font-size: 0.75rem;
        }
        
        .compact-field .mud-select-input {
            padding: 6px 10px;
            font-size: 0.85rem;
            min-height: 38px;
        }
    }
    
    /* Medium Screens (‚â•768px) */
    @@media (min-width: 768px) {
        .mobile-first-container {
            max-width: 720px;
            margin: 0 auto;
            padding: 0 12px;
        }
        
        .header-content {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
        
        .action-buttons {
            margin-top: 0;
        }
        
        .responsive-title {
            font-size: 1.25rem;
        }
        
        .responsive-breadcrumbs .mud-breadcrumb-item {
            font-size: 0.75rem;
        }
        
        .compact-field .mud-input-control .mud-input {
            padding: 8px 12px;
            font-size: 0.875rem;
            min-height: 40px;
        }
        
        .compact-field .mud-select-input {
            padding: 8px 12px;
            font-size: 0.875rem;
            min-height: 40px;
        }
    }
    
    /* Large Screens (‚â•1024px) */
    @@media (min-width: 1024px) {
        .mobile-first-container {
            max-width: 960px;
        }
        
        .responsive-title {
            font-size: 1.5rem;
        }
    }
    
    /* Extra Large Screens (‚â•1200px) */
    @@media (min-width: 1200px) {
        .mobile-first-container {
            max-width: 1140px;
        }
        
        .compact-field .mud-input-control .mud-input {
            padding: 10px 14px;
            font-size: 0.9rem;
            min-height: 42px;
        }
        
        .compact-field .mud-select-input {
            padding: 10px 14px;
            font-size: 0.9rem;
            min-height: 42px;
        }
    }
    
    /* Touch Optimizations */
    @@media (pointer: coarse) {
        .responsive-btn {
            min-height: 44px;
            min-width: 44px;
        }
        
        .compact-field .mud-input-control .mud-input {
            min-height: 44px;
        }
        
        .compact-field .mud-select-input {
            min-height: 44px;
        }
    }
</style>
